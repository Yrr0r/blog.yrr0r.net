<!DOCTYPE html>
<head>
	<meta charset="utf-8">
	<link rel="stylesheet" href="/assets/reader.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%# Generate title for this page %> 
	<%if(metadata.title){ %>
		<title><%- metadata.title %> </title>
	<% }else{ %> 
		<title>><%- path.slice(-1).join('').replace('.html', '') %> </title>
	<% } %> 
</head>

<body>
	<section class="section">
		<div class="container is-max-desktop">
			<% if(breadcrumb == true){ %> 
				<div id="breadcrumb" class="block" hidden="true">
					<nav class="breadcrumb" aria-label="breadcrumbs">
						<ul>
							<li><a href="/">Home</a></li>
							<% for(each in path){ %>
								<li><a href="<%- '/' + path.slice(0, each+1).join('/') %> ">
									<%- path[each].replace('html','') %>
								</a></li>
							<% } %> 
						</ul>
					</nav>
				</div>
			<% } %> 
			<div class="block">
				<div class="content">
					<%- body %> 
				</div>
			</div>
			
		</div>
	</section>
	<script>
		var url = new URL(window.location.href);
		if(url.searchParams.get('bc') == 1){
			document.getElementById('breadcrumb').hidden = false;
		}
	</script>
</body>